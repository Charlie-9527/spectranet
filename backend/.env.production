# 生产环境配置
# 部署时需要修改这些值

# 数据库配置
DATABASE_URL=sqlite:///./spectranet.db
# 如果使用 PostgreSQL，改为：
# DATABASE_URL=postgresql://username:password@localhost:5432/spectranet

# JWT 密钥 - ⚠️ 务必修改为随机字符串！
# 生成命令: python -c "import secrets; print(secrets.token_hex(32))"
# ⚠️ 这是示例密钥，生产环境必须替换！
SECRET_KEY=CHANGE_THIS_TO_RANDOM_SECRET_KEY_IN_PRODUCTION
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# CORS 配置 - 改为你的域名
ALLOWED_ORIGINS=http://www.spectranet.com.cn,https://www.spectranet.com.cn,http://spectranet.com.cn,https://spectranet.com.cn

# 上传配置
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=104857600

# 服务器配置
HOST=0.0.0.0
PORT=8000
